<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewTestAppXam.MainPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <Grid Style="{StaticResource GridPageStyle}">
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="100" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="CollectionView Test App Xamarin" FontSize="32" HorizontalOptions="Start" Padding="8"/>        
        <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround" Grid.Row="1">
            <Button Margin="0,2" FlexLayout.AlignSelf="Center" Style="{StaticResource PrimaryButtonStyle}" Text="Basic CollectionView Page" Clicked="collectionViewPageButton_OnClicked"/>
            <Button Margin="0,2" FlexLayout.AlignSelf="Center" Style="{StaticResource PrimaryButtonStyle}" Text="CollectionView 2 Page" Clicked="collectionView2PageButton_OnClicked"/>
        </FlexLayout>
    </Grid>

</ContentPage>

