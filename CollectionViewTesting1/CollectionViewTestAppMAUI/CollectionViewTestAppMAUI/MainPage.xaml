<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CollectionViewTestAppMAUI.Models"
             xmlns:viewModels="clr-namespace:CollectionViewTestAppMAUI.ViewModels"
             NavigationPage.HasNavigationBar="False"
             x:Class="CollectionViewTestAppMAUI.MainPage"
             BackgroundColor="White">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="CollectionView Test App Maui" FontSize="32" HorizontalOptions="Start" Padding="8"/>
            <!-- See https://github.com/dotnet/maui/wiki/Memory-Leaks for help diagnosing leaks -->
            <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround" Grid.Row="1">
                <Button Margin="0,2" FlexLayout.AlignSelf="Center" Style="{StaticResource PrimaryButtonStyle}" Text="Basic CollectionView Page" Clicked="collectionViewPageButton_OnClicked"/>
                <Button Margin="0,2" FlexLayout.AlignSelf="Center" Style="{StaticResource PrimaryButtonStyle}" Text="CollectionView 2 Page" Clicked="collectionView2PageButton_OnClicked"/>
            </FlexLayout>
    </Grid>

</ContentPage>
